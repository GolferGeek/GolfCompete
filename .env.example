# Database Configuration
# Local development database URL
DATABASE_URL=postgres://postgres:postgres@localhost:5432/golfcompete

# Supabase Configuration
# These are used for server-side operations (higher privileges)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_API_KEY=your_supabase_service_role_key_here

# Client-side Supabase Configuration
# These are exposed to the browser and should use the anon key with limited permissions
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Environment Configuration
# Set to 'development', 'test', or 'production'
NODE_ENV=development 